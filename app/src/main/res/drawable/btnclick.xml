<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <stroke android:width="2dp" android:color="@color/colormargin"></stroke>

            <solid android:color="@color/btnpresstrue"></solid>

            <corners android:radius="20dp"></corners>
        </shape>
    </item>
    <item  android:state_pressed="false">
        <shape>
            <stroke android:color="@color/colormargin"
                android:width="2dp"></stroke>

            <solid android:color="@color/btnpressfalse"></solid>

            <corners android:radius="20dp"></corners>
        </shape>
    </item>

</selector>