<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:orientation="vertical">
    
    <LinearLayout
        android:id="@+id/linearlayout_receiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:orientation="horizontal">
        
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_icon_receiver"
            android:src="@drawable/chatimgreciver"
            android:layout_marginRight="15dp"
            android:layout_gravity="center"
            android:layout_width="45dp"
            android:layout_height="45dp" />
        
        <TextView
            android:id="@+id/receive_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:textSize="13dp"
            android:background="@color/btnpressfalse"
            android:textColor="@color/colorBlack"
            android:layout_marginVertical="5dp" />
        
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayout_sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/send_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:textSize="15dp"
            android:background="@color/btnpresstrue"
            android:textColor="@color/colorBlack"
            android:layout_marginVertical="5dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_icon_sender"
            android:src="@drawable/chatimgsender"
            android:layout_marginLeft="13dp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"/>

    </LinearLayout>

</LinearLayout>